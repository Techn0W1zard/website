---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "TechnoWizard - Innovative Software Solutions" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | TechnoWizard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&family=Inter:wght@400;500;600;700&family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Daniel Ochoa",
      "jobTitle": "Software Engineer & Product Builder",
      "description": "Experienced software engineer specializing in SaaS product development, full-stack development, and bringing products from concept to revenue. Expert in JavaScript, TypeScript, React, Node.js, Python, and modern web technologies.",
      "url": "https://technowizard.io",
      "sameAs": [
        "https://www.linkedin.com/in/danieloochoa",
        "https://github.com/Techn0W1zard"
      ],
      "knowsAbout": [
        "JavaScript",
        "TypeScript", 
        "React",
        "Vue.js",
        "Astro",
        "Node.js",
        "Python",
        "PostgreSQL",
        "Redis",
        "AWS",
        "Docker",
        "SaaS Development",
        "Product Strategy",
        "Chrome Extensions",
        "Full-Stack Development",
        "Web Applications",
        "API Development",
        "Database Design",
        "Cloud Architecture",
        "Startup Technology"
      ],
      "worksFor": {
        "@type": "Organization",
        "name": "TechnoWizard",
        "url": "https://technowizard.io",
        "description": "Product development company focused on building SaaS applications and software tools"
      },
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Austin",
        "addressRegion": "TX",
        "addressCountry": "US"
      },
      "hasOccupation": [
        {
          "@type": "Occupation",
          "name": "Software Engineer",
          "description": "Full-stack software engineer with expertise in modern web technologies, product development, and bringing ideas from concept to profitable products"
        }
      ],
      "workHistory": [
        {
          "@type": "Organization",
          "name": "Indeed",
          "description": "World's largest job site"
        },
        {
          "@type": "Organization", 
          "name": "AutoFi",
          "description": "Automotive finance technology platform"
        },
        {
          "@type": "Organization",
          "name": "Accenture", 
          "description": "Global technology consulting and services company"
        },
        {
          "@type": "Organization",
          "name": "frog",
          "description": "Global design and innovation consultancy"
        }
      ]
    }
    </script>
  </head>
  <body>
    <slot />
    <footer class="text-center pb-8 bg-[var(--color-cream-light)] font-mono">
      <p>Made with ❤️ in Austin, TX</p>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  :root {
    --font-mono: 'JetBrains Mono', 'Courier New', monospace;
    --font-sans: 'Inter', system-ui, sans-serif;
    --font-display: 'DM Sans', sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-display);
    font-weight: 600;
    letter-spacing: -0.02em;
    color: var(--color-charcoal);
  }

  body {
    font-family: var(--font-sans);
    font-weight: 400;
    line-height: 1.6;
  }

  code, pre {
    font-family: var(--font-mono);
    font-weight: 400;
  }
</style>
