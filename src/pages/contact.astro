---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Contact" description="Get in touch with TechnoWizard - Connect with Daniel Ochoa">
  <Navigation />

  <main class="pt-18">
    <!-- Hero Section -->
    <section class="py-20 bg-[var(--color-cream-light)]">
      <div class="container mx-auto px-6 max-w-4xl">
        <div class="text-center">
          <p class="font-mono text-sm text-[var(--color-taupe)] tracking-wider uppercase mb-4">
            Contact
          </p>
          <h1 class="text-4xl md:text-5xl font-display font-bold text-[var(--color-charcoal)] mb-6">
            Let's Connect
          </h1>
          <p class="text-xl text-[var(--color-grey-medium)] max-w-3xl mx-auto leading-relaxed">
            Interested in my products, have feedback, or want to explore potential opportunities? I'd love to hear from you.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-20">
      <div class="container mx-auto px-6 max-w-5xl">
        <div class="grid lg:grid-cols-5 gap-12">
          <!-- Contact Info -->
          <div class="lg:col-span-2">
            <h2 class="text-3xl font-display font-semibold mb-6 text-[var(--color-charcoal)]">
              Get in Touch
            </h2>
            <p class="text-[var(--color-grey-medium)] mb-8 leading-relaxed">
              Whether you're interested in my current products, have ideas for collaboration, or just want to connect, feel free to reach out.
            </p>

            <div class="space-y-6 mb-10">
              <div class="flex items-start">
                <div class="w-12 h-12 bg-[var(--color-cream-light)] border border-[var(--color-pearl)] rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[var(--color-taupe)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="font-display font-medium mb-1 text-[var(--color-charcoal)]">Email</h3>
                  <p class="text-[var(--color-grey-medium)]">hello@technowizard.io</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="w-12 h-12 bg-[var(--color-cream-light)] border border-[var(--color-pearl)] rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[var(--color-taupe)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="font-display font-medium mb-1 text-[var(--color-charcoal)]">Based In</h3>
                  <p class="text-[var(--color-grey-medium)]">Austin, TX</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="w-12 h-12 bg-[var(--color-cream-light)] border border-[var(--color-pearl)] rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[var(--color-taupe)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="font-display font-medium mb-1 text-[var(--color-charcoal)]">Response Time</h3>
                  <p class="text-[var(--color-grey-medium)]">Usually within 24 hours</p>
                </div>
              </div>
            </div>

            <div class="p-6 bg-[var(--color-cream-light)] rounded-lg border border-[var(--color-pearl)]">
              <h4 class="font-display font-medium mb-3 text-[var(--color-charcoal)]">
                What I'm Open To
              </h4>
              <ul class="space-y-2 text-sm text-[var(--color-grey-medium)]">
                <li>• Product feedback and feature suggestions</li>
                <li>• Partnership opportunities</li>
                <li>• General networking and connections</li>
                <li>• Questions about my products or approach</li>
              </ul>
            </div>
          </div>

          <!-- Email Direct Contact -->
          <div class="lg:col-span-3">
            <div class="bg-[var(--color-cream)] p-10 rounded-lg border border-[var(--color-pearl)]">
              <div class="text-center">
                <h3 class="text-2xl font-display font-semibold mb-6 text-[var(--color-charcoal)]">
                  Send Me an Email
                </h3>
                
                <div class="mb-8">
                  <p class="text-[var(--color-grey-medium)] mb-4">
                    The best way to reach me is via email:
                  </p>
                  
                  <div class="inline-flex items-center justify-center p-4 bg-[var(--color-cream-light)] border border-[var(--color-pearl)] rounded-lg">
                    <span class="email-address text-xl font-mono text-[var(--color-charcoal)]" 
                          data-user="hello" 
                          data-domain="technowizard" 
                          data-tld="io">
                    </span>
                    <button 
                      id="copy-email" 
                      class="ml-3 p-2 text-[var(--color-taupe)] hover:text-[var(--color-charcoal)] transition-colors"
                      title="Copy email address"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                      </svg>
                    </button>
                  </div>
                  
                  <div id="copy-feedback" class="hidden mt-2">
                    <p class="text-sm text-green-600">Email address copied!</p>
                  </div>
                </div>

                <div class="space-y-4 text-left max-w-md mx-auto">
                  <div class="flex items-start">
                    <div class="w-6 h-6 bg-[var(--color-cream-light)] border border-[var(--color-pearl)] rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <span class="text-xs font-mono text-[var(--color-taupe)]">1</span>
                    </div>
                    <p class="ml-3 text-sm text-[var(--color-grey-medium)]">
                      <strong>Product feedback</strong> - Tell me what you think about my current projects
                    </p>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="w-6 h-6 bg-[var(--color-cream-light)] border border-[var(--color-pearl)] rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <span class="text-xs font-mono text-[var(--color-taupe)]">2</span>
                    </div>
                    <p class="ml-3 text-sm text-[var(--color-grey-medium)]">
                      <strong>Partnership ideas</strong> - Have a collaboration in mind?
                    </p>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="w-6 h-6 bg-[var(--color-cream-light)] border border-[var(--color-pearl)] rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <span class="text-xs font-mono text-[var(--color-taupe)]">3</span>
                    </div>
                    <p class="ml-3 text-sm text-[var(--color-grey-medium)]">
                      <strong>General networking</strong> - Just want to connect and chat
                    </p>
                  </div>
                </div>

                <div class="mt-8 p-4 bg-[var(--color-cream-light)] rounded-lg border border-[var(--color-pearl)]">
                  <p class="text-sm text-[var(--color-grey-medium)]">
                    <strong>Response time:</strong> Usually within 24 hours
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 bg-[var(--color-cream-light)]">
      <div class="container mx-auto px-6 max-w-4xl">
        <h2 class="text-3xl font-display font-semibold text-center mb-16 text-[var(--color-charcoal)]">
          Common Questions
        </h2>

        <div class="space-y-6">
          <div class="bg-[var(--color-cream)] p-8 rounded-lg border border-[var(--color-pearl)]">
            <h3 class="text-xl font-display font-semibold mb-3 text-[var(--color-charcoal)]">
              Do you take on custom development projects?
            </h3>
            <p class="text-[var(--color-grey-medium)] leading-relaxed">
              No, I don't do consulting or custom development work. TechnoWizard is focused entirely on building and launching my own products.
            </p>
          </div>

          <div class="bg-[var(--color-cream)] p-8 rounded-lg border border-[var(--color-pearl)]">
            <h3 class="text-xl font-display font-semibold mb-3 text-[var(--color-charcoal)]">
              Can I get early access to your products?
            </h3>
            <p class="text-[var(--color-grey-medium)] leading-relaxed">
              Possibly! I sometimes offer early access to people who reach out with genuine interest. Send me a message about what you're looking for.
            </p>
          </div>

          <div class="bg-[var(--color-cream)] p-8 rounded-lg border border-[var(--color-pearl)]">
            <h3 class="text-xl font-display font-semibold mb-3 text-[var(--color-charcoal)]">
              Are you open to partnerships or collaborations?
            </h3>
            <p class="text-[var(--color-grey-medium)] leading-relaxed">
              I'm always interested in hearing about potential partnerships that align with my product goals. Feel free to reach out with specific ideas.
            </p>
          </div>

          <div class="bg-[var(--color-cream)] p-8 rounded-lg border border-[var(--color-pearl)]">
            <h3 class="text-xl font-display font-semibold mb-3 text-[var(--color-charcoal)]">
              How can I stay updated on new products?
            </h3>
            <p class="text-[var(--color-grey-medium)] leading-relaxed">
              The best way is to check back on this site periodically or reach out to join my informal updates list. I share major product launches and milestones.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  // Assemble email address from data attributes
  document.addEventListener('DOMContentLoaded', () => {
    const emailElement = document.querySelector('.email-address');
    if (emailElement) {
      const user = emailElement.getAttribute('data-user');
      const domain = emailElement.getAttribute('data-domain');
      const tld = emailElement.getAttribute('data-tld');
      
      if (user && domain && tld) {
        emailElement.textContent = `${user}@${domain}.${tld}`;
      }
    }

    // Copy email functionality
    const copyButton = document.getElementById('copy-email');
    const copyFeedback = document.getElementById('copy-feedback');
    
    copyButton?.addEventListener('click', async () => {
      const emailElement = document.querySelector('.email-address');
      const emailText = emailElement?.textContent;
      
      if (emailText) {
        try {
          await navigator.clipboard.writeText(emailText);
          copyFeedback?.classList.remove('hidden');
          
          setTimeout(() => {
            copyFeedback?.classList.add('hidden');
          }, 2000);
        } catch (err) {
          // Fallback for older browsers
          const textArea = document.createElement('textarea');
          textArea.value = emailText;
          document.body.appendChild(textArea);
          textArea.select();
          document.execCommand('copy');
          document.body.removeChild(textArea);
          
          copyFeedback?.classList.remove('hidden');
          setTimeout(() => {
            copyFeedback?.classList.add('hidden');
          }, 2000);
        }
      }
    });
  });
</script>

<style>
  .font-mono {
    font-family: var(--font-mono);
  }

  .font-display {
    font-family: var(--font-display);
  }
</style>
